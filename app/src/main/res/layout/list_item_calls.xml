
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:id="@+id/list_item">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:layout_marginBottom="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background2"
            android:layout_margin="1dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">
            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/layout_icon"
                android:layout_centerVertical="true">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:src="@drawable/ic_cat_profile"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="2dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="22dp"
                android:layout_height="50dp"
                android:id="@+id/id_call"
                android:layout_toRightOf="@+id/layout_icon"
                android:orientation="vertical"
                android:layout_centerVertical="true">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/call_type"
                    android:layout_weight="1"
                    android:src="@drawable/ic_missed_call"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="5dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/call_sms"
                    android:layout_weight="1"
                    android:src="@drawable/ic_call"
                    android:scaleType="fitXY"
                    android:layout_marginTop="5dp"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_call"
                android:layout_marginLeft="5dp"
                android:text="Ілля"
                android:textSize="23dp"
                android:layout_alignParentTop="true"
                android:id="@+id/contact_name"
                android:textColor="#05073b"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/id_call"
                android:layout_margin="5dp"
                android:text="096243332"
                android:textSize="14dp"
                android:layout_below = "@+id/contact_name"
                android:id="@+id/contact_number"
                android:textColor="#05073b"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13:50"
                android:textSize="15dp"
                android:layout_gravity="right"
                android:id="@+id/call_time"
                android:textColor="#05073b"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:paddingRight="2dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>